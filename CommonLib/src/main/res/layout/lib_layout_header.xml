<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ugc_title_content"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/color_common_bg">

    <RelativeLayout
        android:id="@+id/ugc_header_left_layout"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:visibility="visible">

        <ImageView
            android:id="@+id/ugc_header_left_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/lib_selector_back_white"
            android:scaleType="center"
            android:visibility="visible" />

        <TextView
            android:id="@+id/ugc_header_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@drawable/lib_selector_text_color_white"
            android:textSize="16sp"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ugc_header_right_image_layout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/ugc_header_right_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="center" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ugc_header_right_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/ugc_header_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@drawable/lib_selector_text_color_white"
            android:textSize="16sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/ugc_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/ugc_header_right_image_layout"
        android:layout_toRightOf="@+id/ugc_header_left_layout"
        android:ellipsize="middle"
        android:gravity="center"
        android:maxLength="20"
        android:singleLine="true"
        android:textColor="@color/color_white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ugc_header_title_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/ugc_header_right_image_layout"
        android:layout_toRightOf="@+id/ugc_header_left_layout"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ugc_header_title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:singleLine="true"
            android:textColor="@color/color_white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/ugc_header_title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:singleLine="true"
            android:textColor="@color/color_white"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:id="@+id/ugc_header_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_light_black" />

</RelativeLayout>
